<style>
	.card{
		background-color: #F2F2F2;
		border: 5px solid #A6763C;
	}
</style>

<div class="container">
	<div class="row g-0 ">
		@foreach (var item in Model)
		{
			<div class="card col-3 p-3 m-5  shadow rounded">
				<img src="/css/health_items/img/@item.items_img" class="card-img-top">
				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@item.items_title</h5>
					<p class="card-text">
						@item.items_context
					</p>
					<div class="mt-auto text-center">
						<a class="btn btn-primary" role="button" href="@item.items_link" target="_blank">想了解更多</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
